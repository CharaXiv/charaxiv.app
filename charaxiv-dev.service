[Unit]
Description=CharaXiv Dev Server with Live Reload
After=network.target

[Service]
Type=simple
User=exedev
WorkingDirectory=/home/exedev/charaxiv
Environment=DEV=1
Environment=GCS_BUCKET=charaxiv-app-dev-assets
Environment=PATH=/home/exedev/go/bin:/usr/local/go/bin:/usr/local/bin:/usr/bin:/bin
ExecStart=/home/exedev/charaxiv/bin/dev
Restart=always
RestartSec=3

[Install]
WantedBy=multi-user.target
